<div class="top-login-container">
  <div class="inner-login-container">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "label-name" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-fiel" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label-name" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "input-fiel" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "label-name" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "login-sbm-btn submit-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  <div>
</div>