<div class="top-login-container">
  <div class="inner-login-container">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "label-name" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-fiel" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "forget-ur-pw-btn submit-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  <div>
</div>