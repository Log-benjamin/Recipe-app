<h1>Shopping List</h1>
<div>
      <div>
        <label>Amount of food items to buy: <%= @recipe_foods&.count || 0 %></label>
        <label>Total value of food needed: <%= number_to_currency(@needed_money, precision: 2) %></label>
      </div>
      <div>
        <table>
          <thead>
            <tr>
              <th>Food</th>
              <th>Quantity</th>
              <th>Value</th>
            </tr>
          </thead>
          <tbody>
            <% @recipe_foods&.each do |recipe_food| %>
              <tr>
                <td><%= recipe_food.food.name %></td>
                <td><%= recipe_food.quantity %></td>
                <td><%= number_to_currency(recipe_food.food.price * recipe_food.quantity, unit: '') %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
</div>
