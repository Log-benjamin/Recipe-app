<div class="top-container">
    <div class="inner-container">
        <h1>Create Recipe Food</h1>
        <%= form_with model: [@recipe, @recipe_food], url: recipe_foods_path(@recipe), method: :post, class: "text-gray-800" do |form| %>
            <%= hidden_field_tag :recipe_id, @recipe.id %>
                <div>
                    <%= form.label :food_id, class: "label-name" %>
                </div>
                <div>
                    <label class = "notic">* If food is not in option please add it in the Foods Page</label>
                </div>
                <div>
                    <%= form.collection_select :food_id, Food.all, :id, :name, {}, class: "input-fiel" %>
                </div>

                <div>
                    <%= form.label :quantity, class: "label-name" %>
                </div>

                <div>
                    <%= form.number_field :quantity, class: "input-fiel" %>
                </div>

                <div class = "submt-btn-div">
                    <%= form.submit "Create Recipe Food", class: "submit-btn" %>
                </div>
        <% end %>
    </div>
</div>